# tpi.kv
# Practicing the calculator Layout

<Tpi_Calc>
	
		

	BoxLayout:
		 
		orientation: 'vertical'
		padding: 10
		size: root.width - 200, root.height - 200
		pos: 100, 100

		Label:
			text: 'TPI CALC'
			font_size: 30
			size_hint_y: 0.1
			padding_bottom: 40
		
		TextInput:
			id: input_field
			#   hint_text: "Enter the Operation"
			readonly: True
			font_size: 40
			size_hint_y: 0.3
			text: '0'

		GridLayout: 
			cols: 4


			Button:
				text: '7'
				on_release: input_field.text += self.text


			Button:
				text: '8'
				on_release: input_field.text += self.text


			Button:
				text: '9'
				on_release: input_field.text += self.text
			Button:
				text: '4'
				on_release: input_field.text += self.text

			Button:
				text: '5'
				on_release: input_field.text += self.text


			Button:
				text: '6'
				on_release: input_field.text += self.text


			Button:
				text: '1'
				on_release: input_field.text += self.text

			Button:
				text: '2'
				on_release: input_field.text += self.text



			Button:
				text: '3'
				on_release: input_field.text += self.text

			Button:
				text: '-'
				on_release: input_field.text += self.text

			Button:
				text: '0'
				on_release: input_field.text += self.text

			Button:
				text: '.'
				on_release: input_field.text += self.text

			Button:
				text: '='
				on_release: input_field.text += self.text


			Button:
				text: '+'
				on_release: input_field.text += self.text

			Button:
				text: '*'
				on_release: input_field.text += self.text

			Button:
				text: '/'
				on_release: input_field.text += self.text


